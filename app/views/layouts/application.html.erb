<!DOCTYPE html>
<html>
  <head>
    <title>MyMess</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
    <nav class = "navbar navbar-expand-md navbar-light bg-light">
        <a class="navbar-brand" href="/messages">MYMESS</a>

         <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
           <span class="navbar-toggler-icon"></span>
         </button>

         <div class="collapse navbar-collapse" id="navbarSupportedContent">
             <ul class="nav navbar-nav">


               <% if current_user %>
               <li class="nav-item">
                 <a class="nav-link active">
                   Username: <%= current_user.name %>
                 </a>
               </li>
                <li class="nav-item">
                  <%= link_to logout_path, remote: true, method: :delete, class: "nav-link" do%>Logout
                  <%end%>
                </li>
              <% else %>
                <li class="nav-item "">
                  <%= link_to "Login",login_path, class: "nav-link" %>
                </li>
              <% end %>
           </ul>

         </div>
  </nav>
  <%= render_breadcrumbs %>
    <div class="container">
      <div class="row">
        <div class="col-md-3">

        </div>
        <div class="col-md-9">
           <% if current_user %>
            <a href="/messages" class="btn btn-secondary">Inbox</a>
            <a href="/messages/new" class="btn btn-success">New message</a>
            <a href="/messages/sentmessages" class="btn btn-primary">Sent messages</a>
            <a href="/users/friendlist" class="btn btn-info">Friends</a>
          <%end%>
          <%= yield %>
        </div>
      </div>
    </div>
  <%= yield :js %>
  </body>
</html>
