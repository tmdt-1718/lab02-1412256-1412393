<div class="message-thumbnail">
	<div class="card-body">
			<div class="col-md-10">
				<h4 class="card-title">
					<%= link_to message_path(a.id), class: "card-title" do %>
						<%= a.title %>
					<% end %>
					</h4>
				<h6 class="card-subtitle mb-2 text-muted">From: <%= a.user_id %></h6>
				<p class="card-text">
					<%= truncate(a.body) %>	
				</p>
			</div>	
  </div>
</div>