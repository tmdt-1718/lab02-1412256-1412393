<%= render partial: 'flash_message', locals: {messages: flash} %>
<h1>New messages</h1>

<%= form_for :post, url: messages_path do |f| %>
<div class="form-group">
	<label>To</label>
	<div class="dropdown">
  <%= f.collection_select :friend_id, @friends.order(:friend_name), :friend_id, :friend_email %>
</div>
</div>
<div class="form-group">
	<label>Title</label>
	<input type="text" name="post[title]" id="post_title" class= 'form-control'  />
</div>
<div class="form-group">
	<label>Body</label>
	<textarea name="post[body]" id="post_body" class= 'form-control'> </textarea>
	<input type='hidden' name="post[user_id]" id="post_user_id" value="<%= session[:current_user_id] %>">
</div>
<button type="submit" class="btn btn-primary"><%= fa_icon "send" %> Send </button>
<% end %>
