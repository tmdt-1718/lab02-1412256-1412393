<%= render partial: 'flash_message', locals: {messages: flash} %>

<div class="message-thumbnail" highlight>
	<div class="card-body">
			<div class="col-md-10">
				<h4 class="card-title">
					<%= link_to message_path(@message.id), class: "card-title" do %>
						<%= @message.title %>
					<% end %>
					</h4>
				<h6 class="card-subtitle mb-2 text-muted">From: <%= link_to user_path(@message.user_id), class: "card-title" do %>
					<%= @message.user_id %>
				<% end %></h6>
				<p >
					<%= @message.body %>	
				</p>
			</div>
		</div>
</div>



