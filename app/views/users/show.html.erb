<%= render partial: 'flash_message', locals: {messages: flash} %>

<div class="card" style="width: 20rem;">
  <img class="card-img-top" src="https://i.imgur.com/rjseIn2.png"  height="200" width="200" >
  <div class="card-body">
    <h4 class="card-title"><%= @user.name %></h4>
    <p class="card-text"><%= @user.email %></p>
    <% if @check %>
  		<% if @friend %>
            <%= link_to new_message_path , class: "btn btn-primary" do %> Sent message <% end %>
            <%= form_for :post, url: '/users/unfriend' do |f| %>

              <div class="form-group">
                    <input type='hidden' name="post[friend_id]" id="post_friend_id" value="<%= @user.id %>">                  
              </div>

              <div class="form-group">
                    <button type="submit" class="btn btn-danger">Unfriend</button>
              </div>
            <% end %>
        <% else %>
                <% if @accept %>
                            <%= form_for :post, url: '/users/acceptfriend' do |f| %>
                              <div class="form-group">
                                <input type='hidden' name="post[friend_id]" id="post_friend_id" value="<%= @user.id %>">
                                <input type='hidden' name="post[friend_name]" id="post_friend_mame" value="<%=  @user.name %>">
                                <input type='hidden' name="post[friend_email]" id="post_friend_email" value="<%=  @user.email %>">
                              </div>

                              <div class="form-group">
                              <button type="submit" class="btn btn-primary">Accept</button>
                              </div>
                              <% end %>
                        <% else %>
                              <% if @add %>
                                      <a href="#" class="btn btn-primary">Added</a>
                              <% else %>
                                      <%= form_for :post, url: '/users/addfriend' do |f| %>

                                        <div class="form-group">
                                              <input type='hidden' name="post[friend_id]" id="post_friend_id" value="<%= @user.id %>">
                                              <input type='hidden' name="post[friend_name]" id="post_friend_mame" value="<%=  @user.name %>">
                                              <input type='hidden' name="post[friend_email]" id="post_friend_email" value="<%=  @user.email %>">
                                        </div>

                                        <div class="form-group">
                                              <button type="submit" class="btn btn-primary">Add friend</button>
                                        </div>
                                      <% end %>
                  <% end %>
                <%end%>
      <% end %>
      <%end%>
    <%= link_to users_path, class: 'btn btn-secondary' do %>
		  Back
		<% end %>
  </div>
</div>
